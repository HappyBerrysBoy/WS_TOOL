{
  "name": "Steem Tools",
  "description": "Steem Tools",
  "version": "1.1.15",
  "permissions": [
    "activeTab", 
    "http://*/*", 
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://steemit.com/*"],
      "run_at": "document_idle",
      "js": ["thirdParty/jquery3.3.1.min.js", "content_script.js"],
      "css": ["content_style.css"]
    }
  ],
  "browser_action": {
    "default_title": "Steem Tools",
    "default_icon": "steemit.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
